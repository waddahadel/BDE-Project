  from fame import user

    #creates empty list 
    result = defaultdict(list)
    #fame_level_numberic=0 for bullshitters => negative fame
    fame_profiles = Fame.object.filter(fame_level_numeric=0).select_related('user', 'expertise_area')
    #searches for negatiive fame_profiles
    for profile in fame_profiles:
       expertise = profile.expertise_area.name
    #adds dictionary to the list
                result[expertise].append({
            "user": profile.user.username,
            "fame_level_numeric": profile.fame_level_numeric,
            "date_joined": profile.user.date_joined,
        })
    #dictionary for final result
    sorted_result = {}

    for expertise, users in result.items():
    #sort list user => fame_level_mumeric in asc, data_joined in desc order
       users.sort(key=lambda x: (x['fame_level_numeric'], -x['date_joined'].timestamp()))
    #remove data_joined from all dictionaries
        for u in users:
        del u["date_joined"]

        sorted_result[expertise] = users

    #gives back final dictionary with expertise names from lists of user and fame_level_metric
        return sorted_result
